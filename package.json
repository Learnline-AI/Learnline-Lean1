{
  "name": "voice-chat-app",
  "version": "1.0.0",
  "description": "Clean minimal voice chat application with AI responses",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "npm --prefix server run dev",
    "client:dev": "npm --prefix client run dev",
    "build": "npm run server:build && npm run client:build",
    "server:build": "npm --prefix server run build",
    "client:build": "npm --prefix client run build",
    "start": "npm --prefix server start"
  },
  "keywords": ["voice", "chat", "ai", "websocket", "realtime"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}